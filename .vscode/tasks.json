{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/lib64/ccache/g++",
            "args": [
                "-fdiagnostics-color=always",
                "${fileDirname}/**.cpp",
                "-std=c++20",
                "-pedantic-errors",
                "-ggdb",
                "-Wall",
                "-Wextra",
                "-lraylib",
                "-lGL",
                "-lm",
                "-lpthread",
                "-ldl",
                "-lrt",
                "-lX11",
                "-Wsign-conversion",
                "-Weffc++",
                "-fsanitize=undefined",
                "-O1",
                "-s",
                "-o",
                "${fileDirname}/output.elf"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
